@model PharmacyManagementSystem.Models.DashboardView

@{
    ViewBag.Title = "Index";
}

@*outside card*@
<style>
 .cardLink, .cardLink:hover, .cardLink:active, .cardLink:visited, .cardLink:focus {
        text-decoration: none;
        text-decoration-color: navy;
    }
   
</style>

@*outside card*@
@if (Context.User.IsInRole("Admin"))
{
<div class="row" style="margin-top:20px;margin-left:10px">
    <div class="col-lg-3 col-sm-6">
        <a href="/Finance/SaleToday" role="button">
            <div class="row">
                <div class="col-sm-5" style="background-color:green;text-align:center;padding:25px">

                    <span class="glyphicon glyphicon-plus" style="color:white;font-size:45px"></span>
                </div>
                <div class="col-sm-6" style="text-align:center;background-color:white;font-size:15px;padding:31px 0px 31px 0px">
                    <div class="row">
                        <div class="col-lg-12">Sale Today</div><div class="col-lg-12">PKR @Model.SalesToday</div>
                    </div>
                </div>
            </div>
        </a>
    </div>
    <div class="col-lg-3 col-sm-6">
        <a href="/Finance/ExpenseToday" role="button">
            <div class="row">
                <div class="col-sm-5" style="background-color:blue;text-align:center;padding:25px">

                    <span class="glyphicon glyphicon-minus" style="color:white;font-size:45px"></span>
                </div>
                <div class="col-sm-6" style="text-align:center;background-color:white;font-size:15px;padding:31px 0px 31px 0px">
                    <div class="row">
                        <div class="col-lg-12">Expense Today</div><div class="col-lg-12">PKR @Model.ExpeneseToday</div>
                    </div>
                </div>
            </div>
        </a>
    </div>



    <div class="col-lg-3 col-sm-6 ">
        <a href="/Stock/MedicineView" role="button">
            <div class="row">
                <div class="col-sm-5" style="background-color:blue;text-align:center;padding:30px">
                    <i class="fa fa-medkit" style="color:white;font-size:45px"></i>

                </div>
                <div class="col-sm-6" style="text-align:center;background-color:white;font-size:15px;padding:31px 0px 31px 0px">
                    <div class="row">
                        <div class="col-lg-12">Medicine</div><div class="col-lg-12">@Model.CountStock</div>
                    </div>
                </div>
            </div>
        </a>
    </div>

 
    <div class="col-lg-3 col-sm-6 ">
        <a href="/Finance/Index" role="button">
            <div class="row">
                <div class="col-sm-5" style="background-color:blue;text-align:center;padding:30px">
                    <i class="fa fa-user" style="color:white;font-size:45px"></i>

                </div>
                <div class="col-sm-6" style="text-align:center;background-color:white;font-size:15px;padding:31px 0px 31px 0px">
                    <div class="row">
                        <div class="col-lg-12">Staff</div><div class="col-lg-12">@Model.CountStaff</div>
                    </div>
                </div>
            </div>
        </a>
    </div>
</div>}
else if (Context.User.IsInRole("Staff"))
{
    <div class="row" style="margin-top:20px;margin-left:10px">
        <div class="col-lg-4 col-sm-6">
            <a href="/Finance/SaleToday" role="button">
                <div class="row">
                    <div class="col-sm-5" style="background-color:green;text-align:center;padding:25px">

                        <span class="glyphicon glyphicon-plus" style="color:white;font-size:45px"></span>
                    </div>
                    <div class="col-sm-6" style="text-align:center;background-color:white;font-size:15px;padding:31px 0px 31px 0px">
                        <div class="row">
                            <div class="col-lg-12">Sale Today</div><div class="col-lg-12">PKR @Model.SalesToday</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>
        <div class="col-lg-4 col-sm-6">
            <a href="/Finance/ExpenseToday" role="button">
                <div class="row">
                    <div class="col-sm-5" style="background-color:blue;text-align:center;padding:25px">

                        <span class="glyphicon glyphicon-minus" style="color:white;font-size:45px"></span>
                    </div>
                    <div class="col-sm-6" style="text-align:center;background-color:white;font-size:15px;padding:31px 0px 31px 0px">
                        <div class="row">
                            <div class="col-lg-12">Expense Today</div><div class="col-lg-12">PKR @Model.ExpeneseToday</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>



        <div class="col-lg-4 col-sm-6 ">
            <a href="/Stock/MedicineView" role="button">
                <div class="row">
                    <div class="col-sm-5" style="background-color:blue;text-align:center;padding:30px">
                        <i class="fa fa-medkit" style="color:white;font-size:45px"></i>

                    </div>
                    <div class="col-sm-6" style="text-align:center;background-color:white;font-size:15px;padding:31px 0px 31px 0px">
                        <div class="row">
                            <div class="col-lg-12">Medicine</div><div class="col-lg-12">@Model.CountStock</div>
                        </div>
                    </div>
                </div>
            </a>
        </div>


      
    </div>
}

<div class="row" style="margin:20px 0px 0px 0px">

    <div class="col-lg-6">
        <div class="panel panel-default" style="box-shadow:2px 2px 5px grey">
            <!-- Default panel contents -->
            <div class="panel-heading">Latest Sales</div>
            <div class="panel panel-default">
                <!-- Default panel contents -->
                <table class="table table-bordered" style="width:100%;text-align:center" >
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Grand Total</th>
                           
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model.LatestSale)
            {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Date)</td>
                               
                                <td>@Html.DisplayFor(modelItem => item.SubTotal)</td>
                            </tr>}
                    <tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="col-lg-6" style="box-shadow:2px 2px 5px grey;background-color:white">


        <div class="panel-body">
            <div class="task-progress">
                <h1>Statistics</h1>
                <p>This Month</p>
            </div>
        </div>
        <table class="table table-hover">
            <tbody>
                <tr>
                    <td>1</td>
                    <td>
                        Number Of Sales
                    </td>
                    <td>
                        <span class="badge bg-important">
                            @Model.CountSales
                        </span>
                    </td>
                    <td>
                        <div id="work-progress1"><canvas width="47" height="20" style="display: inline-block; width: 47px; height: 20px; vertical-align: top;"></canvas></div>
                    </td>
                </tr>

                <tr>
                    <td>2</td>
                    <td>
                        Total Sales
                    </td>
                    <td>
                        <span class="badge bg-important">
                            PKR @Model.TotalSales
                        </span>
                    </td>
                    <td>
                        <div id="work-progress1"><canvas width="47" height="20" style="display: inline-block; width: 47px; height: 20px; vertical-align: top;"></canvas></div>
                    </td>
                </tr>

                <tr>
                    <td>3</td>
                    <td>
                        Number Of Expenses
                    </td>
                    <td>
                        <span class="badge bg-success">
                            @Model.CountExpenses
                        </span>
                    </td>
                    <td>
                        <div id="work-progress2"><canvas width="47" height="22" style="display: inline-block; width: 47px; height: 22px; vertical-align: top;"></canvas></div>
                    </td>
                </tr>

                <tr>
                    <td>4</td>
                    <td>
                        Total Expense
                    </td>
                    <td>
                        <span class="badge bg-success">
                            PKR @Model.TotalExpenses
                        </span>
                    </td>
                    <td>
                        <div id="work-progress2"><canvas width="47" height="22" style="display: inline-block; width: 47px; height: 22px; vertical-align: top;"></canvas></div>
                    </td>
                </tr>

                <tr>
                    <td>5</td>
                    <td>
                        Number Of Medicines
                    </td>
                    <td>
                        <span class="badge bg-info">
                            @Model.CountStock
                        </span>
                    </td>
                    <td>
                        <div id="work-progress3"><canvas width="47" height="22" style="display: inline-block; width: 47px; height: 22px; vertical-align: top;"></canvas></div>
                    </td>
                </tr>

                <tr>
                    <td>6</td>
                    <td>
                        In Stock Inventory Quantity
                    </td>
                    <td>
                        <span class="badge bg-info">
                           @Model.StockInventoryQuantity
                        </span>
                    </td>
                    <td>
                        <div id="work-progress3"><canvas width="47" height="22" style="display: inline-block; width: 47px; height: 22px; vertical-align: top;"></canvas></div>
                    </td>
                </tr>
                <tr>
                    <td>7</td>
                    <td>
                        Medicine out Of Stock
                    </td>
                    <td>
                        <span class="badge bg-warning">
                            @Model.CountOutStockMedicine
                        </span>
                    </td>
                    <td>
                        <div id="work-progress4"><canvas width="47" height="22" style="display: inline-block; width: 47px; height: 22px; vertical-align: top;"></canvas></div>
                    </td>
                </tr>

            </tbody>
        </table>


    </div>
</div>

