<div class="container-scroller">

    <div class="panel panel-default" style="box-shadow:2px 2px 5px grey">
        <div class="panel-heading">
            <div>@Html.Raw(TempData["msg"])</div>
            <i class="fa fa-medkit"></i>
            Medicines
        </div>
    </div>


    @if (Context.User.IsInRole("Admin"))
    {

    <button type="button" class="btn btn-success addStock" data-toggle="modal" data-target="#addModalLong" style="margin-bottom:20px;color:white;box-shadow:2px 2px 5px grey">
        <span class="glyphicon glyphicon-plus-sign"></span>Add Medicine
    </button>
    }
    else
    {
        <button type="button" class="btn btn-success addStock disabled" data-toggle="modal" data-target="#addModalLong" style="margin-bottom:20px;color:white;box-shadow:2px 2px 5px grey">
            <span class="glyphicon glyphicon-plus-sign"></span>Add Medicine
        </button>
    }

    <div class="card">
        <div class="card-body">

            <div class="row">
                <div class="col-lg-12">
                    <table id="order-listing"
                           class="table table-bordered table-hover" style="text-align:center">
                        <thead class="bg-primary text-white">
                            <tr>
                                <th style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <th style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Category)
                                </th>
                                <th style="text-align:center">
                                    @Html.DisplayNameFor(model => model.PurchasePrice)
                                </th>
                                <th style="text-align:center">
                                    @Html.DisplayNameFor(model => model.SellingPrice)
                                </th>
                                <th style="text-align:center">
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </th>
                                <th style="text-align:center">
                                    @Html.DisplayNameFor(model => model.ExpiryDate)
                                </th>
                                <th>Options</th>
                            </tr>
                        </thead>

                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Category)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PurchasePrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.SellingPrice)
                                    </td>
                                    <td>
                                        <div class="row">
                                            @if (Context.User.IsInRole("Admin"))
                                            {
                                            <div class="col-lg-12">
                                                @Html.DisplayFor(modelItem => item.Quantity)

                                                <button type="button" class="btn btn-success  loadStock" data-toggle="modal" data-target="#loadQuantityModal" data-id="@item.SerialNumber">Load</button>
                                            </div>
                                            }
                                            else
                                            { <div class="col-lg-12">@Html.DisplayFor(modelItem => item.Quantity)
                                           <button type="button" class="btn btn-success  loadStock disabled data-toggle="modal" data-target="#loadQuantityModal" data-id="@item.SerialNumber">Load</button>
                                            </div>
                                            }
                                            @if (@item.Quantity <= 50)
                                            { <div class="col-lg-12" style="margin-top:5px">
                                                    <label class="badge badge-danger">Stock out</label>
                                                </div>
                                            }
                                            
                                        </div>
                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.ExpiryDate)
                                    </td>
                                    <td>
                                        <div class="container">
    <div class="row">
        @if (Context.User.IsInRole("Admin"))
        {

            <div class="col-lg-12">

                <button type="button" class="btn btn-success  editStock" data-toggle="modal" data-target="#editModalLong" data-id="@item.SerialNumber">
                    <span class="glyphicon glyphicon-edit"></span> Edit
                </button>
            </div>
                                                <div class="col-lg-12" style="margin-top:5px">
                                                    <div role="button" class="btn btn-danger" style="color:white">
                                                        <span class="glyphicon glyphicon-trash"></span>

                                                        @Html.ActionLink("Delete", "Delete", new { id = item.SerialNumber },
new { @class = "link-button", onclick = "return confirm('Are you sure you wish to delete this Medicine?');", })
</div>
