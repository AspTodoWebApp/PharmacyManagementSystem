                        <span class="glyphicon glyphicon-trash"></span>
 @Html.ActionLink("Delete", "Delete", new { id = item.SerialNumber },new { @class = "link-button", onclick = "return confirm('Are you sure you wish to delete this Medicine?');", })
         </div>
         </div>

        }
                                        </div>
                                            </div>
                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
