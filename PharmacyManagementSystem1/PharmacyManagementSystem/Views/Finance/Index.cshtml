@model IEnumerable<PharmacyManagementSystem.Models.AllSale>

@{
    ViewBag.Title = "Index";
}


<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-1.8.0.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.ui/1.8.22/jquery-ui.js"></script>


<div class="panel panel-default" style="box-shadow:2px 2px 5px grey">
    <div class="panel-heading">
        <i class="fa fa-money"></i>
        All Sales:@Model.Count() Invoices
    </div>
</div>


<a href="/Finance/Create" class="btn btn-success" style="margin-bottom:20px;color:white;box-shadow:2px 2px 5px grey">
    <span class="glyphicon glyphicon-plus-sign"></span>Add New Sale
</a>


<div class="card">
    <div class="card-body">

        <div class="row">
            <div class="col-lg-12">
                <table id="order-listing" class="table table-bordered table-hover" style="text-align:center">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>

                                Invoice Id

                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SubTotal)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Discount)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.GrandTotal)
                            </th>

                            <th>Options</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SubTotal)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Discount)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.GrandTotal)
                            </td>
                            <td>
                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div role="button" class="btn btn-success btn-xs" style="color:white">
                                                <span class="glyphicon glyphicon-edit"></span>
                                                @Html.ActionLink("Detail", "EditBill", new { id = item.OrderId },
                                      new { @class = "link-button" })
                                            </div>
                                        </div>
                                        <div class="col-lg-12" style="margin-top:5px">
                                            <div role="button" class="btn btn-danger btn-xs" style="color:white">
                                                <span class="glyphicon glyphicon-trash"></span>
                                                @Html.ActionLink("Delete", "DeleteOrder", new { id = item.OrderId },
                                      new { @class = "link-button", onclick = "return confirm('Are you sure you wish to delete this order?');", })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </td>
                        </tr>


                    }

                </tbody>


            </table>
        </div>
    </div>
</div>
</div>
