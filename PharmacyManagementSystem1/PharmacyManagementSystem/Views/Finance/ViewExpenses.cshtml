@model IEnumerable<PharmacyManagementSystem.Models.Expens>

@{
    ViewBag.Title = "ViewExpenses";
}

<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-money"></i>
        Expenses
    </div>
</div>


<a href="/Finance/AddExpenses" class="btn btn-success" style="margin-bottom:20px;color:white;box-shadow:2px 2px 5px grey">
    <span class="glyphicon glyphicon-plus-sign"></span>Add New Expense
</a>

<div class="card">
    <div class="card-body">

        <div class="row">
            <div class="col-lg-12">
                <table class="table table-bordered table-hover" id="order-listing" style="text-align:center">
                    <thead class="bg-primary text-white">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Date)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Category)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Amount)
                            </th>

                            <th>Options</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Amount)
                            </td>
                            <td>

                                <div class="container">
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <div role="button" class="btn btn-success btn-xs" style="color:white">
                                                <span class="glyphicon glyphicon-trash"></span>
                                                @Html.ActionLink("Edit", "EditExpense", new { id = item.SerialNumber },
                                      new { @class = "link-button" })
                                            </div>
                                        </div>
                                        <div class="col-lg-12" style="margin-top:5px">
                                            <div role="button" class="btn btn-danger btn-xs" style="color:white">
                                                <span class="glyphicon glyphicon-trash"></span>
                                                @Html.ActionLink("Delete", "DeleteExpense", new { id = item.SerialNumber },
                                      new { @class = "link-button", onclick = "return confirm('Are you sure you wish to delete this expense?');", })
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </td>
                        </tr>

                    }


                </tbody>


            </table>
        </div>
    </div>
</div>
</div>

<script>
                function confirmDelete() {
                    confirm("Are u sure u want to selected delete medicine?")
                }
</script>
