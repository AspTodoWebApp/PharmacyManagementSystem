@model IEnumerable<PharmacyManagementSystem.Models.PlaceOrder>

@{
    ViewBag.Title = "EditBill";
}

<div class="panel panel-default" style="box-shadow:2px 2px 5px grey">
    <div class="panel-heading">
        <i class="fa fa-money"></i>
        Edit Bill : OrderId/@ViewBag.OrderId
    </div>
</div>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="card">
            <div class="card-body">

                <div class="row">
                    <div class="col-lg-12">
                        <table id="order-listing" class="table table-bordered table-hover" style="text-align:center">
                            <thead class="bg-primary text-white">
                                <tr>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Category)
                                    </th>

                                    <th>
                                        @Html.DisplayNameFor(model => model.Quantity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Discount)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.SubTotal)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.OrderDate)
                                    </th>
                                    <th>Options</th>
                                </tr>
                            </thead>
                           
                                <tbody>
                         @foreach (var item in Model)
                         {
                                    <tr>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Category)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Discount)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SubTotal)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.OrderDate)
                                        </td>
                                        <td>
                                          @*  @Html.ActionLink("Edit", "editsale", new { id = item.SerialNumber }) |

                                            @Html.ActionLink("Delete", "DeleteOrder", new { id=item.SerialNumber  })*@
                                            <div class="container">
                                                <div class="row">
                                                    <div class="col-lg-12">
                                                        <div role="button" class="btn btn-success btn-xs" style="color:white">
                                                            <span class="glyphicon glyphicon-trash"></span>
                                                            @Html.ActionLink("Edit", "editsale", new { id = item.SerialNumber },
                                                         new { @class = "link-button" })
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-12" style="margin-top:5px">
                                                        <div role="button" class="btn btn-danger btn-xs" style="color:white">
                                                            <span class="glyphicon glyphicon-trash"></span>
                                                            @Html.ActionLink("Delete", "DeleteOrder", new { id = item.SerialNumber },
                                                         new { @class = "link-button", onclick = "return confirm('Are you sure you wish to delete this order from bill?');", })
                                                        </div>
                                                    </div>

                                                </div>
                                            </div> 
                                        </td>
                                    </tr>}
                                </tbody>
                            

                        </table>
                    </div>
                </div>
            </div>
        </div>

       
                <input type="submit" value="Save Changes" class="btn btn-success" style="margin-top:10px;color:white;box-shadow:2px 2px 5px grey"/>


          
    </div>

}